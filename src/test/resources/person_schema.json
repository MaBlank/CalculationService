{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "description": "Der Vorname der Person"
    },
    "lastName": {
      "type": "string",
      "description": "Der Nachname der Person"
    },
    "age": {
      "type": "integer",
      "description": "Das Alter der Person",
      "minimum": 0
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Die E-Mail-Adresse der Person"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string",
          "description": "Die Stra√üe der Adresse"
        },
        "city": {
          "type": "string",
          "description": "Die Stadt der Adresse"
        },
        "postalCode": {
          "type": "string",
          "description": "Die Postleitzahl"
        }
      },
      "required": ["street", "city", "postalCode"]
    },
    "phoneNumbers": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Eine Telefonnummer"
      }
    }
  },
  "required": ["firstName", "lastName", "email"],
  "additionalProperties": false
}
